        <field name="name">rcv.create.move.wizard.form</field>
        <field name="model">rcv.create.move.wizard</field>
        <field name="arch" type="xml">
            <form string="Crear Facturas desde RCV">
                <sheet>
                    <group>
                        <field name="company_id" readonly="1"/>
                    </group>

                    <group string="LÃ­neas seleccionadas">
                        <field name="line_ids" widget="many2many_tags" readonly="1"/>
                    </group>
                </sheet>

                <footer>
                    <button
                        name="action_create_moves"
                        type="object"
                        string="Crear facturas"
                        class="btn-primary"
                    />
                    <button
                        string="Cancelar"
                        special="cancel"
                        class="btn-secondary"
                    />
                </footer>
            </form>
        </field>
    </record>
</odoo>
