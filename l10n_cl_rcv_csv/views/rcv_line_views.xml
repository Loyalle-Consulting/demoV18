<odoo>

    <!-- ========================= -->
    <!-- Vista LISTA -->
    <!-- ========================= -->
    <record id="view_rcv_line_tree" model="ir.ui.view">
        <field name="name">rcv.line.tree</field>
        <field name="model">rcv.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="document_type"/>
                <field name="folio"/>
                <field name="partner_vat"/>
                <field name="partner_name"/>
                <field name="document_date"/>
                <field name="total_amount"/>
                <field name="match_state"/>
                <field name="account_move_id"/>
            </list>
        </field>
    </record>

    <!-- ========================= -->
    <!-- Vista FORMULARIO -->
    <!-- ========================= -->
    <record id="view_rcv_line_form" model="ir.ui.view">
        <field name="name">rcv.line.form</field>
        <field name="model">rcv.line</field>
        <field name="arch" type="xml">
            <form string="LÃ­nea RCV">
                <sheet>
                    <group>
                        <field name="book_id"/>
                        <field name="document_type"/>
                        <field name="folio"/>
                        <field name="partner_vat"/>
                        <field name="partner_name"/>
                        <field name="document_date"/>
                    </group>

                    <group>
                        <field name="net_amount"/>
                        <field name="tax_amount"/>
                        <field name="total_amount"/>
                    </group>

                    <group>
                        <field name="match_state" readonly="1"/>
                        <field name="account_move_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
