<odoo>

    <!-- ============================= -->
    <!-- Vista lista (tree) -->
    <!-- ============================= -->
    <record id="view_rcv_line_tree" model="ir.ui.view">
        <field name="name">rcv.line.tree</field>
        <field name="model">rcv.line</field>
        <field name="arch" type="xml">
            <list>

                <!-- Documento -->
                <field name="tipo_dte" string="Tipo Doc"/>
                <field name="folio"/>

                <!-- Cliente / Proveedor -->
                <field name="partner_vat" string="RUT"/>
                <field name="partner_name" string="Raz贸n Social"/>

                <!-- Montos -->
                <field name="total_amount" string="Total"/>

                <!-- Conciliaci贸n -->
                <field name="match_state" string="Estado Conciliaci贸n"/>
                <field name="account_move_id" string="Factura Odoo"/>

            </list>
        </field>
    </record>

    <!-- ============================= -->
    <!-- Vista formulario -->
    <!-- ============================= -->
    <record id="view_rcv_line_form" model="ir.ui.view">
        <field name="name">rcv.line.form</field>
        <field name="model">rcv.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <group string="Documento">
                        <field name="tipo_dte"/>
                        <field name="folio"/>
                        <field name="invoice_date"/>
                    </group>

                    <group string="Entidad">
                        <field name="partner_vat"/>
                        <field name="partner_name"/>
                    </group>

                    <group string="Montos">
                        <field name="net_amount"/>
                        <field name="tax_amount"/>
                        <field name="total_amount"/>
                    </group>

                    <group string="Conciliaci贸n">
                        <field name="match_state"/>
                        <field name="account_move_id"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

</odoo>
