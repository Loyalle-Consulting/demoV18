<odoo>

    <record id="view_rcv_import_wizard_form" model="ir.ui.view">
        <field name="name">rcv.import.wizard.form</field>
        <field name="model">rcv.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar RCV desde CSV SII">
                <group>
                    <field name="company_id"/>
                    <field name="year"/>
                    <field name="month"/>
                    <field name="rcv_type"/>
                    <field name="csv_file" filename="filename"/>
                </group>

                <footer>
                    <button
                        name="action_import"
                        type="object"
                        string="Importar"
                        class="btn-primary"
                    />
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>