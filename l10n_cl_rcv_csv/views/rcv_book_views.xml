<odoo>

    <!-- ========================= -->
    <!-- Vista LISTA -->
    <!-- ========================= -->
    <record id="view_rcv_book_tree" model="ir.ui.view">
        <field name="name">rcv.book.tree</field>
        <field name="model">rcv.book</field>
        <field name="arch" type="xml">
            <list>
                <field name="company_id"/>
                <field name="year"/>
                <field name="month"/>
                <field name="rcv_type"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- ========================= -->
    <!-- Vista FORMULARIO -->
    <!-- ========================= -->
    <record id="view_rcv_book_form" model="ir.ui.view">
        <field name="name">rcv.book.form</field>
        <field name="model">rcv.book</field>
        <field name="arch" type="xml">
            <form string="Libro RCV">
                <header>
                    <!-- Botón SIN attrs (Odoo 18) -->
                    <button
                        name="action_reconcile_with_accounting"
                        type="object"
                        string="Conciliar con Contabilidad"
                        class="btn-primary"/>

                    <!-- Statusbar permitido -->
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="imported,compared,posted"/>
                </header>

                <sheet>
                    <group>
                        <field name="company_id"/>
                        <field name="year"/>
                        <field name="month"/>
                        <field name="rcv_type"/>
                        <field name="state" readonly="1"/>
                    </group>

                    <notebook>
                        <page string="Líneas RCV">
                            <field name="line_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
