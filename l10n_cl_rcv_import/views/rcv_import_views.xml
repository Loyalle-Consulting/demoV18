<odoo>

    <!-- ========================= -->
    <!-- Vista LISTA (Odoo 18) -->
    <!-- ========================= -->
    <record id="view_rcv_import_list" model="ir.ui.view">
        <field name="name">l10n_cl.rcv.import.list</field>
        <field name="model">l10n_cl.rcv.import</field>
        <field name="arch" type="xml">
            <list>
                <field name="company_id"/>
                <field name="month"/>
                <field name="year"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- ========================= -->
    <!-- Vista FORMULARIO -->
    <!-- ========================= -->
    <record id="view_rcv_import_form" model="ir.ui.view">
        <field name="name">l10n_cl.rcv.import.form</field>
        <field name="model">l10n_cl.rcv.import</field>
        <field name="arch" type="xml">
            <form string="Importación RCV SII">
                <sheet>

                    <!-- Botones superiores -->
                    <header>
                        <!-- Importación desde SII -->
                        <button
                            name="%(action_rcv_import_wizard)d"
                            string="Importar desde SII"
                            type="action"
                            class="btn-primary"/>

                        <!-- Conciliación con Odoo -->
                        <button
                            name="action_reconcile_rcv"
                            string="Conciliar con Odoo"
                            type="object"
                            class="btn-secondary"/>
                    </header>

                    <!-- Datos principales -->
                    <group>
                        <field name="company_id"/>
                        <field name="month"/>
                        <field name="year"/>
                        <field name="state" readonly="1"/>
                    </group>

                    <!-- Líneas RCV -->
                    <notebook>
                        <page string="RCV">
                            <field name="line_ids"/>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

</odoo>
