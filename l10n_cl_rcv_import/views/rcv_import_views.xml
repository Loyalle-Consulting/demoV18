<odoo>
    <record id="view_rcv_import_list" model="ir.ui.view">
        <field name="name">l10n_cl.rcv.import.list</field>
        <field name="model">l10n_cl.rcv.import</field>
        <field name="arch" type="xml">
            <list>
                <field name="company_id"/>
                <field name="month"/>
                <field name="year"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_rcv_import_form" model="ir.ui.view">
        <field name="name">l10n_cl.rcv.import.form</field>
        <field name="model">l10n_cl.rcv.import</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="company_id"/>
                        <field name="month"/>
                        <field name="year"/>
                        <field name="state" readonly="1"/>
                    </group>

                    <notebook>
                        <page string="RCV">
                            <field name="line_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
