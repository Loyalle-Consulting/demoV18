<odoo>
    <record id="view_rcv_import_wizard_form" model="ir.ui.view">
        <field name="name">l10n_cl.rcv.import.wizard.form</field>
        <field name="model">l10n_cl.rcv.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar RCV desde SII">
                <group>
                    <field name="company_id"/>
                    <field name="month"/>
                    <field name="year"/>
                    <field name="import_type"/>
                </group>
                <footer>
                    <button
                        name="action_import_rcv"
                        type="object"
                        string="Importar"
                        class="btn-primary"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>